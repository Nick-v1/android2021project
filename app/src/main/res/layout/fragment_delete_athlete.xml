<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteAthleteFragment"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Delete Athlete:" />

    <EditText
        android:id="@+id/deleteAthleteid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Athlete id to delete"
        android:layout_margin="20dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/deleteAthleteSportid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Athlete Sport id to delete"
        android:layout_margin="20dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/deleteAthleteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Delete" />

</LinearLayout>